@page
@model LoginModel

        <section>
            <!--Start Content Section-->
            <div class="content">
                <div class="form">
            <div class="center" style="margin-bottom: 40px;">
                    <br /><h2>Bitte anmelden</h2>
            </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="input-form">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="input-form">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Passwort" />
                            <label asp-for="Input.Password" class="form-label">Passwort</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        @* <div class="remember-login">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div> *@
                        <div class="input-form">
                            <input id="login-submit" type="submit" value="Login">
                        </div>
                <!-- Button um abzubrechen -->
                <div class="input-form">
                    <input type="button" onclick="goBack()" value="Abbrechen">
                </div>
                    </form>
                </div>
            </div>
            <!--End Content Section-->
        </section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body{
        background-color: #f0f0f0;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Roboto', sans-serif;
    }

    section {
        position: relative;
        width: 100%;
        height: 100vh;
        display: flex;
    }

        section .content {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%; /* Auf 100 % für die volle Breite des Inhalts setzen */
            height: 100%;
            background: #f0f0f0; /* Hintergrundfarbe */
        }

            section .content .form {
                width: 80%; /* Breite nach Bedarf */
                max-width: 400px; /* Maximal Breite für grössere Bildschirm */
                padding: 20px; /* Padding für Abstände */
                background: #fff; /* Hintergrundfarbe für Formular */
                border-radius: 10px; /* Für die Rundung */
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

                section .content .form h2 {
                    color: black;
                    font-weight: 500;
                    font-size: 1.5em;
                    text-align: center;
                    text-transform: uppercase;
                    margin-bottom: 20px;
                    border-bottom: 4px solid green;
                    display: inline-block;
                    letter-spacing: 1px;
                }

                section .content .form .input-form {
                    margin-bottom: 20px;
                }

                    section .content .form .input-form span {
                        font-size: 16px;
                        margin-bottom: 5px;
                        display: inline-block;
                        color: black;
                        letter-spacing: 1px;
                    }

                    section .content .form .input-form input {
                        width: 100%;
                        padding: 10px;
                        outline: none;
                        border: 1px solid #ccc; /* Borderfarbe */
                        font-size: 16px;
                        letter-spacing: 1px;
                        color: black;
                        background: #f8f8f8; /* hellere Farbe für die Felder */
                        border-radius: 5px; /* Für die Abrundung */
                    }

                        section .content .form .input-form input[type="submit"] {
                            background: green;
                            color: #fff;
                            outline: none;
                            border: none;
                            font-weight: 500;
                            cursor: pointer;
                            border-radius: 5px;
                        }

                            section .content .form .input-form input[type="submit"]:hover {
                                background: darkgreen; /* Beim hover dünkler machen */
                            }

                        section .content .form .input-form input[type="button"] {
                            background: lightgreen;
                            color: black;
                            outline: none;
                            border: none;
                            font-weight: 500;
                            cursor: pointer;
                            border-radius: 5px;
                        }

                            section .content .form .input-form input[type="button"]:hover {
                                background: darkgreen; /* Beim hover dünkler machen */
                                color: white;
                            }

                section .content .form .remember-login {
                    margin-bottom: 10px;
                    color: black;
                    font-size: 14px;
                }

                section .content .form .input-form p {
                    color: black;
                }

                    section .content .form .input-form p a {
                        color: green;
                    }

                section .content .form h3 {
                    color: black;
                    text-align: center;
                    margin: 80px 0 10px;
                    font-weight: 500;
                }
                section .content .form .center {
                    text-align: center;
                 }
</style>


